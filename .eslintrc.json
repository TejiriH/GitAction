{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],       // Enforces 2 spaces for indentation
    "quotes": ["error", "single"], // Requires single quotes
    "semi": ["error", "always"]    // Requires semicolons
  }
}

